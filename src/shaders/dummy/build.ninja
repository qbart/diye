ninja_required_version = 1.3

rule compile
  command = slangc $in -profile spirv_1_5 -target spirv -entry $entry -stage $stage -o ../../../build/$out


build dummy.vert.spv: compile dummy.slang
  stage = vertex
  entry = vsMain

build dummy.frag.spv: compile dummy.slang
  stage = fragment
  entry = fsMain
